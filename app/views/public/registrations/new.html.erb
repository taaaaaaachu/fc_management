<div class="container">
  <div class="vh d-flex align-items-center justify-content-center">
    <div class="card">
      <div class="card-body mb-5">
        <h5 class="card-title mt-5 mb-5">アカウント作成</h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="field col-xl-12 mb-4 col-sm-12">
              <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム(表示名)", class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="field col-xl-12 mb-4 col-sm-12">
              <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
            </div>
          </div>

          <div class="row mb-5">
            <div class="field col-xl-6 col-sm-12">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br>
            </div>

            <div class="field col-xl-6 col-sm-12">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認)", class: "form-control" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "アカウント作成", class: "btn btn-primary ml-5 float-right" %>
          </div>

        <% end %>

        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>